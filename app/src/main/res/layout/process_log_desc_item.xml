<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/ui_panel_list_item_desc"
    >

    <LinearLayout
        android:id="@+id/processItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/icon1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/item_book"/>
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/m4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/processItemTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:textSize="14sp"
                android:text="dddddddddddddd" />
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:translationX="10dp"
                android:visibility="gone"
                android:background="@drawable/ui_small_line" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/processItemContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="dddddddddddddddddddddd" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>