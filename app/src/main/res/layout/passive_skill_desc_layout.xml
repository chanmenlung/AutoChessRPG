<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/passiveSkillLayout">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/ui_window_dark"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/race_demon"/>
                <TextView
                    android:id="@+id/raceClassValue"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"
                    android:text="@string/card_race_demon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="@string/passiveSkillDescLayout_passiveSkillTitle"/>
            </LinearLayout>
            <View
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ui_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="@string/passiveSkillDescLayout_number"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="@string/passiveSkillDescLayout_skillResult"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/descLayout1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/descNumber1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:text="6"/>
                <TextView
                    android:id="@+id/descContent1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="@string/forTesting_testLength"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/descLayout2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/descNumber2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="6"/>
                <TextView
                    android:id="@+id/descContent2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="@string/forTesting_testLength"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/descLayout3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/descNumber3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="6"/>
                <TextView
                    android:id="@+id/descContent3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="@string/forTesting_testLength"/>
            </LinearLayout>

            <Button
                android:id="@+id/centerConfirmButton"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/xml_button_burn_middle_orange"
                android:text="@string/ui_popup_confirm"/>
        </LinearLayout>
</FrameLayout>