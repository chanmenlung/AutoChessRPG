<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_panel_list_item_desc"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/icon1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/item_book"/>
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/m4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/title"
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:text="222" />

            <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="visible"
            android:background="@drawable/ui_small_line" />
            <TextView
                android:id="@+id/content"
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:gravity="left"
                android:textSize="10sp"
                android:layout_centerInParent="true"
                android:text="22 222 22 22222 22222 22222 22222 22222 22222 22222 22222 22222 222 222 222 222 222 222 222 222 222 222 222 222 222" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>